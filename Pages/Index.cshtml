@page
@model IndexModel
@{
    ViewData["Title"] = "ToDo List";
}

<div class="index">
    <div class="text-end pb-1">
        <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> Add</a>
    </div>
    
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Importance</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var obj in Model.ToDoElements)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.ImportanceLevel</td>
                    <td><a asp-page="Details" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-info-square"></i></a>
                        <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>